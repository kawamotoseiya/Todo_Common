<div class="page-header">
  <h1 class="col-md-offset-3">お問い合わせ内容</h1>
</div>

<%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <table class="table col-md-offset-3">
    <tr>
      <th class="col-md-2">名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :message %>
        <%= simple_format(@inquiry.message) %>
      </td>
    </tr>
  </table>
  <div class="col-md-offset-3">
  <%= f.submit '送信', :class => 'btn btn-primary' %>
  </div>
<% end %>
<div class="col-md-offset-2">
  <%= link_to "戻る", :back, class: "btn btn-lg" %>
</div>
