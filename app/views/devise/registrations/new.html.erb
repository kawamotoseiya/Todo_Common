<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <div class="registration-user">
        <h2 class="text-center">ユーザー登録</h2><br>
        <h4 class="text-center">ユーザーの情報を入力してください</h4>
      </div>
      <div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div>
              <label>ユーザーネーム</label>
              <%= f.text_field :name, autofocus: true, class: "form-control", id:"inputName", placeholder:"名前"%>
            </div><br>
            <div>
              <label>Eメールアドレス</label>
              <%= f.email_field :email, class: "form-control", placeholder:"メールアドレス"%>
            </div><br>
            <div>
              <label>パスワード</label>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"パスワード" %>
            </div><br>
            <div>
              <label>パスワード（確認）</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"パスワード確認" %>
            </div><br><br>
            <%= f.submit "新規登録", class: "btn btn-default btn-block btn-base-1 mt-20" %>
        <% end %>
      </div>
    </div>
  </div>
</div>