<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <div class="session-user">
        <h2 class="text-center">ユーザーログイン</h2>
        <div class="text-center">
          <h4>ユーザーネームと<br>パスワードを入力してください。</h4>
        </div>
        <div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div>
                <label>ユーザーネーム</label>
                <%= f.text_field :name, autofocus: true, class: "form-control", placeholder:"ユーザーネーム"%>
              </div><br>
              <div>
                <label>パスワード</label>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"パスワード" %>
              </div><br><br>
              <%= f.submit "ログイン", class:"btn btn-default btn-block btn-base-1 mt-20" %>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
