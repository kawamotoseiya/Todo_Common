<div class="container">
	<h2>todolist作成</h2>
	<div class="row">
		<%= form_for @todolist,url: group_todolists_path do |f| %>
		<div class="todolist_new-form">
			<div class="col-xs-12">
				<%= f.label :表題, class: "col-xs-1" %>
				<%= f.text_field :head, class: "col-xs-6" %>
			</div>
		</div>
		<div class="todolist_new-form">
			<div class="col-xs-12">
				<%= f.label :内容, class: "col-xs-1" %>
				<%= f.text_area :body, class: "col-xs-6",style: "height: 200px;" %>
			</div>
		</div>
		<div class="todolist_new-form">
			<div class="col-xs-12"><br>
				<div class="col-xs-1"></div>
				<%= f.submit "追加", class: "btn btn-success" %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="row">
		<%= link_to "戻る", group_todolists_path(@group.id), class: "btn btn-primary" %>
	</div>
</div>