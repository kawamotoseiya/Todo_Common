<div class="container">
	<h2>ユーザー編集</h2>
		<%= form_for @user do |f| %>
		<div class="row">
		<div class="col-xs-4">
			<%= attachment_image_tag @user, :image, class: "img-square", fallback: "no_image.jpg", size:"200x200" %>
			<%= f.label :イメージ画像 %>
			<%= f.attachment_field :image %>
		</div>
		<div class="col-xs-8">
			<div>
			<%= f.label :ユーザーネーム %>
			<%= f.text_field :name %>
			</div><br>
			<div>
				<%= f.label :メールアドレス %>
				<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			</div>
		</div>
		</div>
		<div class="row">
			<div class="col-xs-6"></div>
			<%= f.submit "ユーザー情報更新" ,class: "btn btn-success"%>
		</div>
		<% end %>
	<div class="row">
		<%= link_to "戻る", groups_path,class: "btn btn-primary" %>
	</div>
</div>