<div class="container">
	<div class="row">
		<h2 class="col-xs-10">メンバー一覧</h2>
	</div>
	<div class="row">
		<table class="table table-hover">
			<% @group_users.each do |group_user| %>
			<tr>
				<td><%= group_user.user.image %></td>
				<td><%= group_user.user.name %></td>
				<% if @group.user_id == current_user.id %>
					<% if group_user.user_id == current_user.id %>
					<td><%= link_to "グループを削除する", group_path(@group.id), method: :delete, data: {confirm: "グループを削除してもよろしいですか？"} %></td>
					<% elsif group_user.join_status == "参加申請中" && group_user.permit_status == "拒否" %>
					<td><%= link_to "許可", group_group_user_path(@group.id, group_user.id), method: :put %></td>
					<td><%= link_to "拒否", group_group_user_path(@group.id, group_user.id), method: :delete, data: {confirm: "参加を拒否しますか？"} %></td>
					<% end %>
				<% elsif group_user.user_id == current_user.id && @group.user_id != current_user.id %>
				<td><%= link_to "グループから抜ける", group_group_user_path(@group.id, current_user.id)%></td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
	<div class="row">
		<%= link_to "戻る", :back %>
	</div>
</div>